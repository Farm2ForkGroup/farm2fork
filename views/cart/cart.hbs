<h1 class="text-center my-4">Your Shopping Cart</h1>
<div class="container">
  {{#if cart.products.length}}
    <div class="row">
      <!-- Lista de productos -->
      <div class="col-12">
        <table class="table table-striped table-bordered">
          <thead class="cart-table">
            <tr>
              <th scope="col">Product</th>
              <th scope="col">Quantity</th>
              <th scope="col">Price</th>
              <th scope="col">Subtotal</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each cart.products}}
              <tr>
                <td>{{this.product.name}}</td>
                <td>{{this.quantity}}</td>
                <td>€{{this.product.price}}</td>
                <td>€{{multiply this.product.price this.quantity}}</td>
                <td>
                  <form action="/cart/remove/{{this.product._id}}" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                  </form>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
    <!-- Resumen del carrito -->
    <div class="row">
      <div class="col-12 col-md-4 ms-auto">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Order Summary</h5>
            <hr>
            <p class="d-flex justify-content-between">
              <span>Total:</span>
              <strong>€{{calculateTotal cart.products}}</strong>
            </p>
            <a href="/checkout" class="btn btn-primary w-100">Proceed to Checkout</a>
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <!-- Mensaje si el carrito está vacío -->
    <div class="text-center mt-5">
      <h2>Your cart is empty</h2>
      <a href="/products" class="btn btn-outline-primary mt-3">Shop Now</a>
    </div>
  {{/if}}
</div>